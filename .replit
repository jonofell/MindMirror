entrypoint = "README.md"
modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Frontend Dev"

[[workflows.workflow]]
name = "Frontend Dev"
author = 41834918
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "EXPO_PUBLIC_ALLOW_ORIGIN=* EXPO_NO_TUNNEL=0 npx expo start --tunnel --port=8081 --clear"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8081
externalPort = 8081

[[ports]]
localPort = 8082
externalPort = 80

[deployment]
run = ["sh", "-c", "npx serve web-build -l localhost:5000"]
build = ["sh", "-c", "npx expo export:web"]
