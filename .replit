entrypoint = "README.md"
modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Frontend Dev"

[[workflows.workflow]]
name = "Dev Server"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && node index.js &"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "EXPO_PUBLIC_ALLOW_ORIGIN=* EXPO_NO_TUNNEL=1 EXPO_PACKAGER_PROXY_URL=https://$REPLIT_DEV_DOMAIN REACT_NATIVE_PACKAGER_HOSTNAME=$REPLIT_DEV_DOMAIN npx expo start --port=8082 --clear"

[[workflows.workflow]]
name = "EAS Init"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx eas init"

[[workflows.workflow]]
name = "EAS Update"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx eas update --auto"

[[workflows.workflow]]
name = "EAS Publish Preview iOS"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx eas build --platform ios --profile preview"

[[workflows.workflow]]
name = "EAS Publish Preview Android"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx eas build --platform android --profile preview"

[[workflows.workflow]]
name = "Backend Server"
author = 41834918
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && node index.js"

[[workflows.workflow]]
name = "Kill and Restart"
author = 41834918
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && node index.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "EXPO_PACKAGER_PROXY_URL=https://${REPLIT_DEV_DOMAIN} REACT_NATIVE_PACKAGER_HOSTNAME=${REPLIT_DEV_DOMAIN} EXPO_NO_TUNNEL=1 npx expo start --port=8082 --no-dev --minify --https"

[[workflows.workflow]]
name = "Clean Start"
author = 41834918
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && node index.js & "

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "EXPO_PACKAGER_PROXY_URL=https://${REPLIT_DEV_DOMAIN} REACT_NATIVE_PACKAGER_HOSTNAME=${REPLIT_DEV_DOMAIN} EXPO_NO_TUNNEL=1 npx expo start --port=8082 --clear"

[[workflows.workflow]]
name = "Dev Server with CORS"
author = 41834918
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && node index.js &"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "EXPO_PUBLIC_ALLOW_ORIGIN=* EXPO_PACKAGER_PROXY_URL=https://$REPLIT_DEV_DOMAIN REACT_NATIVE_PACKAGER_HOSTNAME=$REPLIT_DEV_DOMAIN npx expo start --port=8082"

[[workflows.workflow]]
name = "Frontend Dev Server"
author = 41834918
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "EXPO_PUBLIC_ALLOW_ORIGIN=* EXPO_NO_TUNNEL=1 EXPO_PACKAGER_PROXY_URL=https://$REPLIT_DEV_DOMAIN REACT_NATIVE_PACKAGER_HOSTNAME=$REPLIT_DEV_DOMAIN npx expo start --port=8082 --clear"

[[workflows.workflow]]
name = "Frontend Dev"
author = 41834918
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "EXPO_PUBLIC_ALLOW_ORIGIN=* EXPO_NO_TUNNEL=1 EXPO_PACKAGER_PROXY_URL=https://$REPLIT_DEV_DOMAIN REACT_NATIVE_PACKAGER_HOSTNAME=$REPLIT_DEV_DOMAIN npx expo start --port=8082 --clear --host lan"

