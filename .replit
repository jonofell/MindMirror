entrypoint = "README.md"
modules = ["nodejs-20"]

[workflows]
runButton = "Frontend Dev"

[[workflows.workflow]]
name = "Frontend Dev"
author = 41834918
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "EXPO_PUBLIC_ALLOW_ORIGIN=* EXPO_NO_TUNNEL=1 EXPO_PACKAGER_PROXY_URL=https://$REPLIT_DEV_DOMAIN REACT_NATIVE_PACKAGER_HOSTNAME=$REPLIT_DEV_DOMAIN HTTPS=true npx expo start --web --port=8081 --clear --host=0.0.0.0"

[deployment]
run = ["sh", "-c", "npx expo start --web --port=8081 --host=0.0.0.0"]
build = ["sh", "-c", "npm install"]
