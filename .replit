entrypoint = "README.md"
modules = ["nodejs-20"]

[workflows]
runButton = "Frontend Dev"

[[workflows.workflow]]
name = "Frontend Dev"
author = 41834918
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "EXPO_PUBLIC_ALLOW_ORIGIN=* EXPO_NO_TUNNEL=1 EXPO_PACKAGER_PROXY_URL=https://$REPLIT_DEV_DOMAIN REACT_NATIVE_PACKAGER_HOSTNAME=$REPLIT_DEV_DOMAIN HTTPS=true npx expo start --port=8081 --clear --localhost"

[deployment]
run = ["sh", "-c", "npx serve web-build -l 0.0.0.0:5000"]
build = ["sh", "-c", "npm install && npx expo export --platform web"]
